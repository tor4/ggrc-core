<li class="tree-item" data-model="true">
  <div class="item-main" {{data 'model'}}>
    <div class="item-wrap">
      {{> /static/templates/base_objects/open_close.stache}}
      <div class="select disabled">
        <div class="item-data">
          <div class="row-fluid">
            <div class="span12">
              <div class="item-data">
                <div>
                  <i class="fa fa-{{instance.root_object}} color"></i>
                  {{instance.title_plural}}
                </div>
              </div>
            </div>
          </div>
        </div><!-- item-data end -->
      </div><!-- select end -->
    </div><!-- item-wrap end -->
  </div><!-- item-main end -->

  <div class="tier-2-info item-content">
    <div class="tier-2-info-content">
      <div class="table-wrap {{#if instance.isChangeableExternally}}table-wrap_type_readonly{{/if}}">
        <table class="table custom-attribute-definitions">
          <colgroup>
            <col style="width: 50%"/>
            <col style="width: 25%"/>
            <col style="width: 15%"/>
            <col style="width: 10%"/>
          </colgroup>
          <thead>
            <tr>
              <th>Attribute name</th>
              <th>Attribute type</th>
              <th>Mandatory</th>
              {{^if instance.isChangeableExternally}}
                <th>Edit</th>
              {{/if}}
            </tr>
          </thead>
          {{#child_options.0}}
          <tbody class="tree-structure new-tree tree-view-control" {{data 'options'}}>
          </tbody>
          {{/child_options.0}}
          <!-- Custom attribute definitions here -->
          {{^if instance.isChangeableExternally}}
            <tfoot class="add-item">
              <tr>
                <td colspan="4" class="tree-item tree-item-add">
                  <div class="row-fluid">
                    <div class="span12">
                      <a
                        href="javascript://"
                        data-toggle="modal-ajax-form"
                        class="btn btn-small btn-white"
                        rel="tooltip"
                        data-placement="right"
                        data-object-title="{{instance.title_singular}}"
                        data-object-singular="CustomAttributeDefinition"
                        data-object-plural="custom_attribute_definitions"
                        data-object-params='{ "definition_type": "{{instance.table_singular}}", "modal_title": "Add Attribute to type {{instance.title_singular}}" }'
                        data-original-title="Add Attribute">
                        <i class="fa fa-plus-circle"
                          data-test-id="button_add-86eaf948">
                        </i>
                      </a>
                    </div>
                  </div>
                </td>
              </tr>
            </tfoot>
          {{/if}}
        </table>
      </div>
    </div>
  </div>
</li>

{{#each items}}
    <div class="ggrc-form-item {{#if_in attributeType 'input,text'}}ggrc-form-item--row{{else}}ggrc-form-item--column{{/if}}">
            <inline-edit-control class="inline-edit-control inline-edit-control--{{attributeType}}"
                (inline-save)="updateGlobalAttribute(%event, %context)"
                {instance}="instance"
                {dropdown-options}="multiChoiceOptions"
                {dropdown-class}="dropdownClass"
                dropdown-no-value="true"
                {edit-mode}="editMode"
                {is-allow-edit}="isAllowEdit"
                {is-loading}="isLoading"
                {value}="value"
                {type}="attributeType"
                with-read-more="true">
                  <confirm-edit-action
                      (set-edit-mode)="setEditModeInline(%event)"
                      (set-in-progress)="setInProgressState()"
                      {instance}="instance"
                      {on-state-change-dfd}="onStateChangeDfd"
                      {edit-mode}="editMode">
                        <base-inline-control-title
                            {edit-mode}="editMode"
                            {is-edit-icon-denied}="isEditDenied"
                            (set-edit-mode-inline)="confirmEdit()">
                          <div class="ggrc-form__title">{{title}}</div>
                        </base-inline-control-title>
                  </confirm-edit-action>
            </inline-edit-control>
    </div>
{{/each}}
